<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoFinalApps" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WelcomeMain" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ButtonMain" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:background">@drawable/buttonbackmain</item>
    </style>

    <style name="activos" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/el_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:background">@drawable/buttonbackmain</item>
    </style>

    <style name="desactivos" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/grei</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/buttonbackmain</item>
    </style>

    <style name="EditTextMain" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>//
        <item name="android:paddingLeft">15px</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>

    <style name="ForgotPassMin" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondary_1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="NoAccount" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondary_1</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/cairo_regular</item>
    </style>




</resources>