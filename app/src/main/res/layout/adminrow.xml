<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_app_back">

    <ImageView
        android:id="@+id/imageInstructor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/persona" />

    <TextView
        android:id="@+id/instructorName"
        style="@style/ForgotPassMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cairo_regular"
        android:text="nombre"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageInstructor"
        tools:layout_editor_absoluteX="92dp" />

    <Button
        android:id="@+id/deleteInstructor"
        android:layout_width="47dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageInstructor" />
</androidx.constraintlayout.widget.ConstraintLayout>