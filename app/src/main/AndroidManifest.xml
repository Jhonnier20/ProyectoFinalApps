<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyectofinalapps">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFinalApps">
        <activity
            android:name=".activities.ActivateClient_AllowEntry"
            android:exported="true" />
        <activity
            android:name=".activities.PrivacyPolicyActivity"
            android:exported="true" />
        <activity
            android:name=".activities.HomeGymActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterGymActivity"
            android:exported="true" />
        <activity
            android:name=".activities.HomeStaffActivity"
            android:exported="true" />
        <activity
            android:name=".activities.HomeClientActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterUserActivity"
            android:exported="true" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activities.GymActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ClientActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
    </application>

</manifest>